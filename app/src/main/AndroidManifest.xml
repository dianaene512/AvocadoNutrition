<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.diana.licentaschelet">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.AccountRelated.LogInRegister" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".Activities.AccountRelated.Register" />
        <activity android:name=".Activities.HomeScreen" />
        <activity android:name=".Activities.ProductRelated.MyFridge" />
        <activity android:name=".Activities.ProductRelated.FoodToday" />
        <activity android:name=".Activities.ProductRelated.FavoriteProducts" />
        <activity android:name=".Activities.Recipes" />
        <activity android:name=".Activities.Statistics" />
        <activity android:name=".Activities.AccountRelated.ResetPassword" />
        <activity android:name=".Activities.AccountRelated.Settings" />
        <activity android:name=".Activities.ProductRelated.AddProductActivity" />
        <activity android:name=".Activities.AccountRelated.AccountInformation"></activity>
    </application>

</manifest>