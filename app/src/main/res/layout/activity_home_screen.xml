<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diana.licentaschelet.Activities.HomeScreen">


    <GridLayout
        android:id="@+id/gvSectiuni"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.891">

        <!-- Row 1 -->

        <!-- Column 1 -->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"


            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/griinchis"
            android:backgroundTintMode="src_over">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgFridge"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_above="@+id/textView9"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/fridge" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imgFridge"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/average_sans"
                    android:text="@string/my_fridge"
                    android:textAlignment="center"
                    android:textColor="@color/culoareTextHomePage"
                    android:textSize="20sp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!-- Column 2 -->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"

            android:layout_marginBottom="1dp"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/griinchis">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgFood"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_above="@+id/txtWhatIAte"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/food" />

                <TextView
                    android:id="@+id/txtWhatIAte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imgFood"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/average_sans"
                    android:text="@string/what_i_ate_today"
                    android:textAlignment="center"
                    android:textColor="@color/culoareTextHomePage"
                    android:textSize="20sp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <!-- Row 2 -->

        <!-- Column 1 -->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"

            android:layout_marginBottom="1dp"

            android:layout_marginRight="1dp"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/griinchis">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgHeart"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_above="@+id/txtFav"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/heart" />

                <TextView
                    android:id="@+id/txtFav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imgHeart"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/average_sans"
                    android:text="@string/favorite_products"
                    android:textAlignment="center"
                    android:textColor="@color/culoareTextHomePage"
                    android:textSize="20sp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!-- Column 2 -->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"

            android:layout_marginBottom="1dp"

            android:layout_rowWeight="1"
            android:backgroundTint="@color/griinchis">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgRecipes"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_above="@+id/txtRecipes"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/recipes" />

                <TextView
                    android:id="@+id/txtRecipes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imgRecipes"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/average_sans"
                    android:text="@string/recipes"
                    android:textAlignment="center"
                    android:textColor="@color/culoareTextHomePage"
                    android:textSize="20sp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <!-- Row 2 -->

        <!-- Column 1 -->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"

            android:layout_marginRight="1dp"

            android:layout_rowWeight="1"
            android:backgroundTint="@color/griinchis">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgStatistics"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_above="@+id/txtStatistics"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/graph" />

                <TextView
                    android:id="@+id/txtStatistics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imgStatistics"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/average_sans"
                    android:text="@string/statistics"
                    android:textAlignment="center"
                    android:textColor="@color/culoareTextHomePage"
                    android:textSize="20sp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!-- Column 2 -->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"

            android:layout_rowWeight="1"

            android:backgroundTint="@color/griinchis">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_above="@+id/txtSettings"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/settings" />

                <TextView
                    android:id="@+id/txtSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imageView9"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/average_sans"
                    android:text="@string/settings"
                    android:textAlignment="center"
                    android:textColor="@color/culoareTextHomePage"
                    android:textSize="20sp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </GridLayout>


</android.support.constraint.ConstraintLayout>


